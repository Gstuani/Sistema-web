<%- include('../layout/header', {title: 'Dashboard'}) %>

<%- include('../layout/menu', {title1: 'Finalizados'}) %>

<section class="section hero is-link is-fullheight-with-navbar notify-page">
    <div class="hero-body has-text-centered">
        <div class="container">
            <h2 class="subtitle">
                Pedidos finalizados
            </h2>
        </div>
    </div> 

    <% finished.forEach(function(finish) { %>
        <article class="larg">
                <div>
                <h3>Nome: <%= finish.name %> </h3>
                <p>Detalhes do Pedido:</p>
                <% finish.order.forEach(function(item) { %>
                    <p>SKU: <%= item.sku %></p>
                    <p>Nome: <%= item.name %></p>
                    <p>Quantidade: <%= item.qtd %></p>
                    <p>Observações: <%= item.obs %></p>
                <% }) %>
                <p>Nome do usuário: <%= finish.name %></p>
                <p>Endereço do usuário: <%= finish.address %></p>
                </div>
        </article>
    <% }) %>
</section>

<%- include('../layout/footer') %>