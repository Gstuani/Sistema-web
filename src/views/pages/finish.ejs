<%- include('../layout/header', {title: 'Dashboard'}) %>

<%- include('../layout/menu', {title1: 'Finalizados'}) %>

<section class="section hero is-link is-fullheight-with-navbar notify-page">
    <div class="hero-body has-text-centered">
        <div class="container">
            <h2 class="subtitle">
                Pedidos finalizados
            </h2>
        </div>
    </div> 

    <% finished.forEach(function(finish) { %>
        <article class="larg">
                <div>
                    <h3>Nome: <%= finish.name %> ---------- <%= finish.Address ? finish.Address.address + ' + ' + finish.Address.address2 : 'Endereço não disponível' %><br>Método de pagamento: <%= finish.paymentMethod %> <br>Total: <%= finish.total %></h3><br>
                    <p>Detalhes do Pedido:</p>
                <% finish.order.forEach(function(item) { %>
                    <p><strong><%= item.sku %></strong></p>
                    <p>Pizza: <strong><%= item.name %></strong> ------ Tamanho: <strong><%= item.size %></strong> </p> 
                    <p>Preço: <strong><%= item.price %></strong> ------ Quantidade: <strong><%= item.qtd %></strong></p>
                    <p>Observações: <strong><%= item.obs %></strong></p>
                    <p><img src="<%= item.link %>" alt=""></p> <br>
                <% }) %>
                </div>
        </article>
    <% }) %>
</section>

<%- include('../layout/footer') %>