<%- include('../layout/header', {title: 'Dashboard'}) %>

<%- include('../layout/menu', {title1: 'Home'}) %>

<section class="section hero is-link is-fullheight-with-navbar notify-page">
    <div class="hero-body has-text-centered">
        <div class="container">
            <h2 class="subtitle">
                Aceitar pedidos
            </h2>
        </div>
    </div> 

    <% pedidos.forEach(function(pedido) { %>
        <article class="larg">
                <div>
                <h3>Status: <%= pedido.status %> Nome: <%= pedido.name %> Endereço: <%= pedido.address %> </h3>
                <p>Detalhes do Pedido:</p>
                <% pedido.order.forEach(function(item) { %>
                    <p>SKU: <%= item.sku %></p>
                    <p>Nome: <%= item.name %></p>
                    <p>Quantidade: <%= item.qtd %></p>
                    <p>Observações: <%= item.obs %></p>
                <% }) %>
                <form action="/accept" method="post">
                    <input type="hidden" name="id" value="<%= pedido._id %>">
                    <button type="submit">Aceitar Pedido</button>
                </form>
                </div>
        </article>
    <% }) %>
</section>

<%- include('../layout/footer') %>