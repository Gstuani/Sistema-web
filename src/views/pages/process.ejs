<%- include('../layout/header', {title: 'Dashboard'}) %>

<%- include('../layout/menu', {title1: 'Home'}) %>

<section class="section hero is-link is-fullheight-with-navbar notify-page">
    <div class="hero-body has-text-centered">
        <div class="container">
            <h2 class="subtitle">
                Aceitar pedidos
            </h2>
        </div>
    </div> 

    <% pedidos.forEach(function(pedido) { %>
        <article class="larg">
                <div>
                <h3>Nome: <%= pedido.name %> ---------- Endereço: <%= pedido.address %> ---------- Horário do pedido: </h3>
                <p>Detalhes do Pedido:</p>
                <% pedido.order.forEach(function(item) { %>
                    <p><strong>SKU: <%= item.sku %></strong></p>
                    <p>Pizza: <%= item.name %> ------ Tamanho: <%= item.size %> </p> 
                    <p>Preço: <%= item.price %> ------ Quantidade: <%= item.qtd %></p>
                    <p>Observações: <%= item.obs %></p>
                    <p>Imagem: <img src="<%= item.img %>" alt=""></p> <br>
                <% }) %>
                <form action="/accept" method="post">
                    <input type="hidden" name="id" value="<%= pedido._id %>">
                    <button type="submit">Aceitar Pedido</button>
                </form>
                </div>
        </article>
    <% }) %>
</section>

<%- include('../layout/footer') %>