<%- include('../layout/header', {title: 'Dashboard'}) %>

<%- include('../layout/menu', {title1: 'pedidos'}) %>

<section class="section hero is-link is-fullheight-with-navbar notify-page">
  <div class="hero-body has-text-centered">
    <div class="container">
      <h2 class="subtitle">
        Fazer os pedidos
      </h2>
    </div>
  </div> 

  <% requests.forEach(function(request) { %>
    <article class="larg">
        <div>
        <h3>Nome do usuário: <%= request.name %> ------Endereço do usuário: <%= request.address %> </h3>
        <p>Detalhes do Pedido:</p>
        <% request.order.forEach(function(item) { %>
          <p><strong>SKU: <%= item.sku %></strong></p>
          <p>Pizza: <%= item.name %> ------ Tamanho: <%= item.size %> </p> 
          <p>Preço: <%= item.price %> ------ Quantidade: <%= item.qtd %></p>
          <p>Observações: <%= item.obs %></p>
          <p>Imagem: <img src="<%= item.img %>" alt=""></p> <br>
        <% }) %>
        <form action="/sending" method="post">
          <input type="hidden" name="id" value="<%= request._id %>">
          <button type="submit">Enviar Pedido</button>
        </form>
        </div>
    </article>
  <% }) %>
</section>

<%- include('../layout/footer') %>